<% include partials/header %>
    <div class="container pt-5">
        <div class="w-100 mb-10 d-flex justify-content-start">
            <img src="<%= movie.poster %>" alt="Movie Poster" onerror="this.src='http://via.placeholder.com/500x400'"/>
            <div class="d-flex flex-column ml-5 pt-4">
                <h3 class="display-4 mb-3 text-white"><%= movie.original_title %></h3>
                <p class="my-1 text-white"><strong>Release Date:</strong> <%= movie.release_date %></p>
                <p class="my-1 text-white"><strong>Plot:</strong> <%= movie.overview %></p>
                <a class="btn btn-danger back-btn" href="javascript:history.go(-1)">Back</a>
            </div>
        </div>

        <div class="trailer mt-10">
                <iframe src="<%=movie.trailer%>"></iframe>
        </div>

    </div>
<% include partials/footer %>